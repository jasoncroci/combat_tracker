<h1><%= combat.encounter.name %></h1>

<div class="container-fluid">
  <div class="table-responsive bordered">
    <table id="combatant_table" class="table table-hover table-condensed">
      <caption>Round: <span><%= combat.current_round %></span></caption>
      <thead>
        <tr>
          <td>Initiative</td>
          <td>Name</td>
          <td>Hit Points</td>
          <td>Armor Class</td>
        </tr>
      </thead>
      <tbody>
      <%= render partial: 'table_rows', locals: { combatants: combat.combatants } %>
      </tbody>
    </table>
  </div>
</div>

<%= render partial: 'form', locals: { combat: combat } %>
