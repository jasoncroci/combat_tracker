<h1>Encounters</h1>

<div class="container-fluid">
  <% encounters.each do |encounter| %>

    <div class="row" style="margin-bottom: 10px;">

      <div class="col-xs-6 col-sm-4">
        <h4 class="encounter_title"><%= link_to encounter.name, edit_encounter_path(encounter) %></h4>
      </div>
      <div class="col-xs-6 col-sm-4">
        <a href="<%= encounter_path(encounter) %>" class="btn btn-primary btn-sm">Enemies</a>
      </div>
      <div class="col-xs-6 col-sm-4">
        <% if encounter.combat %>
           <a href="<%= current_combat_path %>" class="btn btn-warning btn-sm">Continue combat</a>
        <% else %>
          <%= bootstrap_form_for(encounter, url: encounter_combats_path(encounter), method: :post, html: {class:'form-inline'}) do |f| %>
            <%= f.submit 'Start combat', class: 'btn btn-success btn-sm' %>
            <% end %>
        <% end %>
      </div>


    </div>

  <% end %>
</div>
