<tr id="<%= identity %>" data-visible="<%= visible %>">
  <td scope="row">
    <a href="#" name="<%= identity %>_initiative" data-type="text" data-title="Enter initiative"><%= initiative %></a>
  </td>

  <td name="<%= identity %>_name" class="<%= combatant_class_name %>">
    <%= name %>
  </td>

  <td name="<%= identity %>_presence">
    <%= content_tag(:span, nil, :class => open_eye, :style => "#{visible ? '' : 'display:none;'}", "data-visible" => "true") %>
    <%= content_tag(:span, nil, :class => closed_eye, :style => "#{visible ? 'display:none;' : ''}", "data-visible" => "false") %>
  </td>

  <td>
    <%= link_to current_hit_points, "#", {
      name: "#{identity}_current_hit_points",
      "data-type" => "text",
      "data-title" => "Enter hit points"
      }
    %>
  </td>

  <td>
    <%= armor_class %>
  </td>
</tr>
