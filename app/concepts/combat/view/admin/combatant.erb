<tr id="<%= identity %>">
  <td scope="row">
    <a href="#" name="<%= identity %>_initiative" data-type="text" data-title="Enter initiative"><%= model.initiative %></a>
  </td>

  <td name="<%= identity %>_name" class="<%= combatant_class_name %>">
    <%= name %>
  </td>

  <td>
    <%= link_to current_hit_points, "#", {
      name: "#{identity}_current_hit_points",
      "data-type" => "text",
      "data-title" => "Enter hit points"
      }
    %>
  </td>

  <td>
    <%= model.armor_class %>
  </td>
</tr>
