<%= javascript_include_tag 'combats' %>

<h1><%= encounter.name %></h1>

<div class="container-fluid">
  <div class="table-responsive bordered">
    <table id="combatant_table" class="table table-hover table-condensed">
      <caption>Round: <span><%= current_round %></span></caption>
      <thead>
        <tr>
          <td>Initiative</td>
          <td>Name</td>
          <td>Presence</td>
          <td>Hit Points</td>
          <td>Armor Class</td>
        </tr>
      </thead>
      <tbody>
      <%= cell(Combat::Cell::Admin::Combatant, collection: combatants) %>
      </tbody>
    </table>
    <%= cell(Combat::Cell::Admin::Form, model) %>
  </div>
</div>
